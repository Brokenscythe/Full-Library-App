                                </div>
                            </div>
                        </div>
                    </div>
                
                    <div class="absolute bottom-0 w-full">
                        <div class="flex flex-row">
                            <div class="inline-block w-full text-right py-[7px] mr-[100px] text-white">
                                <button type="button"
                                    class="btn-animation shadow-lg mr-[15px] w-[150px] focus:outline-none text-sm py-2.5 px-5 transition duration-300 ease-in bg-[#F44336] hover:bg-[#F55549] rounded-[5px]">
                                    Ponisti <i class="fas fa-times ml-[4px]"></i>
                                </button>
                                <button type="submit" id="izdajKnjigu" class="btn-animation shadow-lg w-[150px] disabled:opacity-50 focus:outline-none text-sm py-2.5 px-5 transition duration-300 ease-in rounded-[5px] hover:bg-[#46A149] bg-[#4CAF50]" onclick="validateAndSubmit()">Izdaj knjigu <i class="fas fa-check ml-[4px]"></i></button>

                            </div>
                        </div>
                    </div>
                </form>
                
            </div>
        </section>
        <!-- End Content -->
    </main>
    <!-- End Main content -->

    <!-- Notification for small devices -->
    <%- include('../includes/layout/inProgress') %>


    <!-- Scripts -->
    <%- include('../includes/layout/scripts') %>
    <!-- End Scripts -->
    <script>
       document.addEventListener('DOMContentLoaded', function() {
  const selectUcenik = document.getElementById('ucenikIzdavanje');
  const selectBibliotekar = document.getElementById('bibliotekarIzdavanje');

  // Fetch user data using AJAX
  fetch('/api/users') // Update the route to match your Express route for fetching user data
    .then((response) => response.json())
    .then((data) => {
      data.forEach((user) => {
        // Create an option element for each user
        const option = document.createElement('option');
        option.value = user.id; // Use the user's id as the value
        option.textContent = user.name; // Display the user's name

        // Append the option to the "Ucenik" select element
        selectUcenik.appendChild(option);

        // Clone the option for the "Bibliotekar" select element
        selectBibliotekar.appendChild(option.cloneNode(true));
      });
    })
    .catch((error) => {
      console.error(error);
    });
});


        function updateReturnDate() {
  const datumIzdavanjaInput = document.getElementById('datumIzdavanja');
  const datumVracanjaInput = document.getElementById('datumVracanja');

  if (datumIzdavanjaInput && datumVracanjaInput) {
    const izdavanjaDate = new Date(datumIzdavanjaInput.value);
    if (!isNaN(izdavanjaDate)) {
      // dodaj 20 dana na datum izdavanja
      const returnDate = new Date(izdavanjaDate);
      returnDate.setDate(returnDate.getDate() + 20);

      //formatiraj datum
      const returnDateString = returnDate.toISOString().split('T')[0];

      // update-uj polje
      datumVracanjaInput.value = returnDateString;
    }
  }
}

        </script>
</body>

</html>